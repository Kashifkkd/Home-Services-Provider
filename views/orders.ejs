    <div class='orders'>
        <table>
            <tr>
                <th>Order ID</th>
                <th>Service Type</th>
                <th>Shop Name</th>
                <th>Price</th>
                <th>Time &  Date</th>
                <th>Order Status</th>
            </tr>
            <tr>
                <td>1</td>
                <td><%=service %></td>
                <td><%=shopname %></td>
                <td><%=price %></td>
