      const username = '<%= username %>';
      const id = '<%= id %>';
      const priceButton = document.getElementById('i1');

      console.log(username);
      console.log(id);

      priceButton.addEventListener('click', () => {
        console.log('clicked')
        window.location = `proceed-page`
      });

    </script>

</body>
</html>